<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_revature_splash_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_screen_bg"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.revature.aynna.revature.RevatureSplashScreen"
    android:backgroundTintMode="src_over"
    android:backgroundTint="?android:attr/colorControlHighlight"
    android:foregroundTint="@android:color/background_dark"
    android:foregroundTintMode="add">

    <Button
        android:id="@+id/logIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f7a528"
        android:fontFamily="sans-serif"
        android:onClick="logIn"
        android:text="@string/log_in"
        android:layout_above="@+id/register"
        android:layout_alignParentStart="true"
        style="@android:style/Widget.Material.Button.Colored"
        tools:targetApi="m"
        android:transitionName="logInButton" />

    <Button
        android:id="@+id/register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:onClick="register"
        android:text="@string/register"
        android:background="#72a5c2"
        android:transitionName="registerButton"
        style="@android:style/Widget.Material.Button.Colored"
        tools:targetApi="m"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/revature_orangebar_10"
        android:id="@+id/orangebar_10"
        />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/revature_orangebar_9"
        android:id="@+id/orangebar_9"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:srcCompat="@drawable/revature_orangebar_8"
        android:id="@+id/orangebar_8"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:srcCompat="@drawable/revature_orangebar_7"
        android:id="@+id/orangebar_7"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        app:srcCompat="@drawable/revature_orangebar_6"
        android:id="@+id/orangebar_6"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/revature_orangebar_5"
        android:id="@+id/orangebar_5"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        app:srcCompat="@drawable/revature_orangebar_4"
        android:id="@+id/orangebar_4"
        android:layout_marginBottom="25dp"
        android:layout_marginStart="20dp"
        />

    <ImageView
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:srcCompat="@drawable/revature_orangebar_3"
        android:id="@+id/orangebar_3"
        android:layout_marginBottom="20dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        app:srcCompat="@drawable/revature_orangebar_2"
        android:id="@+id/orangebar_2"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"/>

    <ImageView
        android:layout_width="10dp"
        android:layout_height="10dp"
        app:srcCompat="@drawable/revature_orangebar_1"
        android:id="@+id/orangebar_1"
        android:layout_marginStart="95dp"
        android:layout_marginEnd="10dp" />

    <ImageView
        app:srcCompat="@drawable/revature_letter_base"
        android:id="@+id/revature_letter_base"
        android:layout_height="50dp"
        android:layout_width="250dp"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="1dp"
        android:paddingRight="25dp"
        android:layout_below="@+id/orangebar_9"
        android:layout_toEndOf="@+id/orangebar_2" />

</RelativeLayout>
